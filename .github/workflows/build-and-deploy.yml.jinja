name: Build and Deploy

on:
  push:
    branches:
      - main
      - develop
    tags:
      - "v*"
  pull_request:
    branches:
      - main
      - develop

env:
  REGISTRY: {{ aliyun_registry }}
  NAMESPACE: {{ aliyun_namespace }}
  IMAGE_NAME: {{ app_name }}

jobs:
{% if enable_tests -%}
  test:
    name: Test
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Go
        uses: actions/setup-go@v5
        with:
          go-version: "{{ go_version }}"
          cache: true

{% if enable_private_repos -%}
      - name: Setup private repo access
        run: |
          git config --global url."https://${{ secrets.GH_TOKEN }}@github.com/".insteadOf "https://github.com/"
          echo "machine pkg.blksails.net login ${{ secrets.NETRC_LOGIN }} password ${{ secrets.NETRC_PASSWORD }}" > ~/.netrc
          chmod 600 ~/.netrc

{% endif -%}
      - name: Download dependencies
        run: go mod download

      - name: Run go vet
        run: go vet ./...

      - name: Run tests
        run: go test -v -race -coverprofile=coverage.out ./...

      - name: Upload coverage
        uses: codecov/codecov-action@v4
        with:
          file: ./coverage.out
          flags: unittests
          fail_ci_if_error: false
        continue-on-error: true

{% endif -%}
  build:
    name: Build
    runs-on: ubuntu-latest
{% if enable_tests -%}
    needs: test
{% endif -%}
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Go
        uses: actions/setup-go@v5
        with:
          go-version: "{{ go_version }}"
          cache: true

{% if enable_private_repos -%}
      - name: Setup private repo access
        run: |
          git config --global url."https://${{ secrets.GH_TOKEN }}@github.com/".insteadOf "https://github.com/"
          echo "machine pkg.blksails.net login ${{ secrets.NETRC_LOGIN }} password ${{ secrets.NETRC_PASSWORD }}" > ~/.netrc
          chmod 600 ~/.netrc

{% endif -%}
      - name: Build binary
        run: |
          go build -ldflags="-s -w" -o {{ app_name }} .
          ./{{ app_name }} --version || echo "Binary built successfully"

  docker:
    name: Build and Push Docker Image
    runs-on: ubuntu-latest
{% if enable_tests -%}
    needs: [test, build]
{% else -%}
    needs: build
{% endif -%}
    if: github.event_name == 'push' || github.event_name == 'tag'
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

{% if enable_private_repos -%}
      - name: Setup private repo access for Docker
        run: |
          echo "machine pkg.blksails.net login ${{ secrets.NETRC_LOGIN }} password ${{ secrets.NETRC_PASSWORD }}" > ~/.netrc
          chmod 600 ~/.netrc

{% endif -%}
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Alibaba Cloud Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ secrets.ALIYUN_REGISTRY_USERNAME }}
          password: ${{ secrets.ALIYUN_REGISTRY_PASSWORD }}

      - name: Extract metadata
        id: meta
        run: |
          # Generate image tags
          if [[ $GITHUB_REF == refs/tags/* ]]; then
            VERSION=${GITHUB_REF#refs/tags/}
          elif [[ $GITHUB_REF == refs/heads/main ]]; then
            VERSION=latest
          elif [[ $GITHUB_REF == refs/heads/develop ]]; then
            VERSION=dev
          else
            VERSION=${GITHUB_SHA::8}
          fi

          IMAGE_TAG="${{ env.REGISTRY }}/${{ env.NAMESPACE }}/${{ env.IMAGE_NAME }}:${VERSION}"
          LATEST_TAG="${{ env.REGISTRY }}/${{ env.NAMESPACE }}/${{ env.IMAGE_NAME }}:latest"

          echo "version=${VERSION}" >> $GITHUB_OUTPUT
          echo "tags=${IMAGE_TAG}" >> $GITHUB_OUTPUT
          echo "latest_tag=${LATEST_TAG}" >> $GITHUB_OUTPUT

          echo "Building image with tags:"
          echo "  - ${IMAGE_TAG}"
          if [[ $GITHUB_REF == refs/heads/main ]]; then
            echo "  - ${LATEST_TAG}"
          fi

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: .deploy/Dockerfile
          platforms: linux/amd64
          push: true
          tags: |
            ${{ steps.meta.outputs.tags }}
            ${{ github.ref == 'refs/heads/main' && steps.meta.outputs.latest_tag || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
{% if enable_private_repos -%}
          secrets: |
            netrc=${{ secrets.NETRC_FILE }}
{% endif -%}

      - name: Image digest
        run: echo "Image pushed successfully with tag ${{ steps.meta.outputs.version }}"

  deploy-notification:
    name: Deployment Notification
    runs-on: ubuntu-latest
    needs: docker
    if: success()
    steps:
      - name: Send notification
        run: |
          echo "ðŸš€ Image built and pushed successfully!"
          echo "ðŸ“¦ Image: ${{ env.REGISTRY }}/${{ env.NAMESPACE }}/${{ env.IMAGE_NAME }}"
          echo "âœ… Ready for SAE deployment"

